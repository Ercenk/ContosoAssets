@model ContosoAssets.WebApp.Areas.SubscriptionManagement.Models.CustomerUserModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer User</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerUserName" class="control-label"></label>
                <div class="row">
                    <div class="col-xs-6">
                        <input asp-for="CustomerUserName" class="form-control"/>
                    </div>
                    <div class="col-xs-6">
                        @@ @Html.DisplayFor(model => model.CustomerName)
                        <input asp-for="CustomerName" type="hidden" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}